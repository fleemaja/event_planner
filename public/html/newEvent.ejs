<form action="/" method="post">
  <div class="form-group">
    <label for="event-title">
      <span>Event Name</span>
      <input type="text" id="event-title" class="form-control" name="title" placeholder="Add a short, clear name" required>
      <div class="tooltip" id="title-tooltip"><span class="fa fa-exclamation"></span>Name is required</div>
    </label>
  </div>
  <div class="form-group">
    <label for="event-type">
      <span>What Kind of Event is It?</span>
      <input list="events" id="event-type" class="form-control" name="eventType" placeholder="party, birthday, etc." required>
      <div class="tooltip" id="type-tooltip"><span class="fa fa-exclamation"></span>Event Type is required</div>
      <datalist id="events">
        <option value="Party"></option>
        <option value="Birthday"></option>
        <option value="Meeting"></option>
        <option value="Wedding"></option>
        <option value="Conference Talk"></option>
        <option value="Sports Game"></option>
      </datalist>
    </label>
  </div>
  <div class="form-group">
    <label for="event-host">
      <span>Who's Hosting?</span>
      <input type="text" id="event-host" class="form-control" name="eventHost" value="<%= user %>" placeholder="individualâ€™s name, an organization, etc" required>
      <div class="tooltip" id="host-tooltip"><span class="fa fa-exclamation"></span>Host is required</div>
    </label>
  </div>
  <div class="form-group">
    <label for="event-location">
      <span>Location</span>
      <input type="text" id="event-location" class="form-control" name="eventLocation" placeholder="include a place or address" required>
      <div class="tooltip" id="location-tooltip"><span class="fa fa-exclamation"></span>Location is required</div>
    </label>
  </div>
  <div class="form-group">
    <label for="event-start">
      <span>Start Time</span>
      <input type="datetime-local" id="event-start" class="form-control" name="startDate" required>
    </label>
  </div>
  <div class="form-group">
    <label for="event-end">
      <span>End Time</span>
      <input type="datetime-local" id="event-end" class="form-control" name="endDate" required>
    </label>
  </div>
  <div class="form-group">
    <label for="event-guestList">
      <span id="guestList-text">Guest List <span id="add-guest">+ Add a Guest</span></span>
      <fieldset class="form-group" id="event-guestList">
          <input type="hidden" name="guestList" id="guestList" value="">
          <input type="text" class="form-control form-guestList" placeholder="Guest 1">
          <input type="text" class="form-control form-guestList" placeholder="Guest 2">
      </fieldset>
    </label>
  </div>
  <div class="form-group">
    <label for="event-message">
      <span>Details (optional)</span>
      <textarea rows="4" id="event-message" class="form-control" name="message" placeholder="Tell people more about the event"></textarea>
    </label>
  </div>
    
  <button type="submit" id="event-submit" class="btn btn-warning btn-lg">Submit</button>
</form>